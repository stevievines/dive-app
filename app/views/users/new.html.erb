<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :gender %>
      <%= f.radio_button :gender, 'male', :checked => true %> Male
      <%= f.radio_button :gender, 'female' %> Female 
      <br>
      <br>

      <%= f.check_box :isDiver %> 
      <%= label :isDiver, 'Diver' %>
      <%= f.check_box :isCoach %>
      <%= label :isCoach, 'Coach' %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.select :state, options_for_select(us_states) %>

      <%= f.label :birthday %>
      <%= f.date_select :birthday, :start_year => Time.now.year - 70 %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
